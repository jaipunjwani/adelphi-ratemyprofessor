{
  "name": "Rate My Adelphi Professors",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Gets information from ratemyprofessor.com and displays it next to a professor's name in CLASS.",
  "icons": { "48": "icon48.png",
    "128": "icon128.png" },
    "background": {
      "persistent": false,
      "scripts": ["event.js"]
    },
    "permissions": ["*://*.ratemyprofessors.com/*", "*://class.adelphi.edu/*"],
    "content_scripts": [
      {
        "matches": ["*://class.adelphi.edu/*"],
        "js": ["content.js"]
      }
    ]
}

